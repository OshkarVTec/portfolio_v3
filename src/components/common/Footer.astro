---
import { socialData } from '../../data/social.ts';
import { Icon } from 'astro-icon/components';
---

<footer id="contact" class="bg-gray-50 border-t border-gray-200">
    <div class="max-w-6xl mx-auto px-6 md:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="space-y-4">
                <h3 class="text-2xl font-bold text-gray-900">
                    Let's Work Together
                </h3>
                <p class="text-gray-600">
                    Available for freelance projects and exploring ideas and
                    opportunities. Interested in workflow systems, healthcare
                    software, and operational tools.
                </p>
                <div class="flex gap-6 pt-2">
                    {
                        socialData.map((social) => (
                            <a
                                href={social.link}
                                class="text-gray-600 hover:text-primary-600 transition-colors"
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Icon name={social.icon} class="w-6 h-6" />
                                <span class="sr-only">{social.platform}</span>
                            </a>
                        ))
                    }
                </div>
            </div>
            <div class="space-y-4">
                <h4 class="font-semibold text-gray-900">Contact</h4>
                <p class="text-gray-600">
                    Email: <a
                        href="mailto:oskar.villa@grafito-software.com"
                        class="text-primary-600 hover:text-primary-700"
                        >oskar.villa@grafito-software.com</a
                    >
                </p>
                <div class="pt-4 border-t border-gray-200">
                    <p class="text-sm text-gray-600">
                        <strong>Computer Science Engineer</strong><span>
                            - Advanced AI concentration
                        </span><br />
                        <span class="text-gray-500">Tec de Monterrey</span>
                    </p>
                </div>
                <p class="text-sm text-gray-500 pt-2">
                    Â© {new Date().getFullYear()} Oskar Villa. Software Engineer
                    specializing in workflow and operational systems.
                </p>
            </div>
        </div>
    </div>
</footer>
