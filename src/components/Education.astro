---
import Subtitle from './common/Subtitle.astro';
import { educationData } from '../data/education.ts';
---

<section id="education" class="flex flex-col items-center lg:block">
    <Subtitle>Education</Subtitle>
    <div class="flex flex-wrap justify-around">
        {
            educationData.map((educationItem) => (
                <div class="border-2 border-black w-[80%] lg:w-[45%] m-4 p-4">
                    <div class="my-4">
                        <div class="flex flex-col items-start lg:flex-row lg:justify-between lg:items-center">
                            <h3 class="text-lg font-bold">
                                {educationItem.name}
                            </h3>
                            <p class="text-sm">{educationItem.date}</p>
                        </div>
                        <h4 class="text-md">{educationItem.school}</h4>
                    </div>
                </div>
            ))
        }
    </div>
</section>
