---
import Subtitle from "./common/Subtitle.astro";
import { experienceData } from "../data/experience.ts";
import type Experience from "../types/experience.ts";
---

<section id="experience" class="flex flex-col items-center lg:block">
    <Subtitle>Experience</Subtitle>
    <div class="flex flex-wrap justify-around">
        {experienceData.map((experienceItem : Experience) => (
            <div class="border-2 border-black w-[80%] lg:w-[45%] m-4 p-4">
                <div class="my-4">
                    <div class="flex flex-col items-start lg:flex-row lg:justify-between lg:items-center">
                        <h3 class="text-lg font-bold">{experienceItem.name}</h3>
                        <p class="text-sm">{experienceItem.date}</p>
                    </div>
                    <h4 class="text-md">{experienceItem.position}</h4>
                </div>
                <p class="text-sm">{experienceItem.description}</p>

                <ul class="list-disc py-4 px-8">
                    {experienceItem.bullets.map((bullet) => (
                        <li class="text-sm">
                            {bullet}
                        </li>
                    ))}
                </ul>
            </div>
        ))}
    </div>
</section>
